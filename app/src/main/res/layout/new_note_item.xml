<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:padding="9dp"
    android:background="@drawable/note_shape"
    android:id="@+id/note_container"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/note_show_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/note_show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Note"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/note_show_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Friend this is my first note and i will very happy \n if this is success full "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_show_title" />

    <TextView
        android:id="@+id/note_show_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tue 12/03/2004 5:03 AM"
        android:textColor="@color/black"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_show_content" />

</androidx.constraintlayout.widget.ConstraintLayout>